<header>
  <h2 class="title">Groups</h2>
</header>
<% @groups.each do |g| %>
  <%= link_to group_path(g) do %>
    <div>
      <%= image_tag(g.icon, class: "group__thumbnail") %>
      <div>
        <p><%= g.name %></p>
      </div>
      <span><%= g.created_at.strftime('%d %b %Y') %></span>
    </div>
  <% end %>
<% end %>
<%= link_to "Create new", new_group_path %>