<header>
  <h2 class="title">Create group</h2>
</header>
<%= form_with model: @group do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :icon, "Icon URL" %><br>
  <%= f.text_field :icon, placeholder: " " %><br><br>
  <%= f.submit "Create", disable_with: 'Creating...' %>
<% end %>